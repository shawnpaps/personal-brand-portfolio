{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"rootDir": "./",
		"outDir": "./dist",
		"types": ["node"]
	},
	"include": ["./payload.config.ts", "./src/**/*"]
}
