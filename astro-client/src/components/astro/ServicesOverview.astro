<!-- Contact Modal -->
<div id="contact-modal" class="fixed inset-0 z-50 hidden">
	<div class="absolute inset-0 bg-black/80 backdrop-blur-sm"></div>
	<div class="relative z-10 flex items-center justify-center min-h-screen p-4">
		<div
			class="bg-moody-900/95 backdrop-blur-md rounded-2xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto border border-warm-500/20"
		>
			<div class="p-8">
				<div class="flex justify-between items-center mb-6">
					<h3 class="text-2xl font-bold text-warm-400 font-heading">
						Get In Touch
					</h3>
					<button
						id="close-modal"
						class="text-moody-400 hover:text-warm-400 transition-colors duration-300"
					>
						<svg
							class="w-6 h-6"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M6 18L18 6M6 6l12 12"></path>
						</svg>
					</button>
				</div>
				<ContactForm client:load />
			</div>
		</div>
	</div>
</div>

<script>
	document.addEventListener('DOMContentLoaded', function () {
		const tabs = document.querySelectorAll('.trade-tab');
		const contents = document.querySelectorAll('.trade-content');
		const modal = document.getElementById('contact-modal') as HTMLElement;
		const closeModal = document.getElementById('close-modal') as HTMLElement;
		const ctaButtons = document.querySelectorAll('.cta-button');

		// Tab switching functionality
		tabs.forEach((tab: Element) => {
			tab.addEventListener('click', function (this: HTMLButtonElement) {
				const trade = this.dataset.trade;

				// Update tab states
				tabs.forEach((t: Element) => t.classList.remove('active'));
				this.classList.add('active');

				// Update content visibility
				contents.forEach((content: Element) => {
					content.classList.remove('active');
					content.classList.add('hidden');
				});

				const targetContent = document.getElementById(`${trade}-services`);
				if (targetContent) {
					targetContent.classList.remove('hidden');
					setTimeout(() => {
						targetContent.classList.add('active');
					}, 50);
				}
			});
		});

		// Modal functionality
		function openModal() {
			modal.classList.remove('hidden');
			document.body.style.overflow = 'hidden';
		}

		function closeModalFunc() {
			modal.classList.add('hidden');
			document.body.style.overflow = 'auto';
		}

		// CTA button event listeners
		ctaButtons.forEach((button: Element) => {
			button.addEventListener('click', openModal);
		});

		// Close modal event listeners
		closeModal.addEventListener('click', closeModalFunc);

		// Close modal when clicking outside
		modal.addEventListener('click', function (e: Event) {
			if (e.target === modal) {
				closeModalFunc();
			}
		});

		// Close modal with Escape key
		document.addEventListener('keydown', function (e: KeyboardEvent) {
			if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
				closeModalFunc();
			}
		});
	});
</script>
