---
import RootLayout from '../layouts/RootLayout.astro';
import ContactForm from '../components/react/ContactForm';
import TestimonialCard from '../components/react/TestimonialCard';
import { getTestimonials } from '../supabase/supabase';
const testimonials = await getTestimonials();
const randomTestimonial =
	testimonials?.[Math.floor(Math.random() * testimonials.length)];
---

<RootLayout title="Contact - Shawn Papineau">
	<!-- Hero Section -->
	<section
		class="relative min-h-screen flex items-center justify-center overflow-hidden"
	>
		<!-- Background Elements -->
		<div
			class="absolute inset-0 bg-gradient-to-br from-moody-900 via-moody-800 to-moody-900"
		>
		</div>

		<!-- Hero Background Image -->
		<div class="absolute inset-0">
			<img
				src="https://iiyjiikbtsckevydbcsj.supabase.co/storage/v1/object/public/portfolio-assets/Images/Portraits/PAPS2948.jpg"
				alt="Creative workspace with warm lighting"
				class="w-full h-full object-cover opacity-30"
				loading="eager"
			/>
		</div>

		<!-- Overlay for better text readability -->
		<div
			class="absolute inset-0 bg-gradient-to-br from-moody-900/80 via-moody-800/70 to-moody-900/80"
		>
		</div>

		<div
			class="absolute inset-0 opacity-30"
			style="background-image: radial-gradient(circle at 1px 1px, rgba(249, 115, 22, 0.1) 1px, transparent 0); background-size: 40px 40px;"
		>
		</div>

		<!-- Floating Elements -->
		<div
			class="absolute top-20 left-20 w-32 h-32 bg-warm-500/10 rounded-full blur-xl animate-pulse"
		>
		</div>
		<div
			class="absolute bottom-20 right-20 w-48 h-48 bg-warm-400/5 rounded-full blur-2xl animate-pulse delay-1000"
		>
		</div>
		<div
			class="absolute top-1/2 left-1/4 w-24 h-24 bg-warm-600/8 rounded-full blur-lg animate-pulse delay-500"
		>
		</div>

		<div class="relative z-10 container mx-auto px-6 py-20">
			<div class="max-w-6xl mx-auto">
				<!-- Header -->
				<div class="text-center mb-16">
					<h1
						class="text-5xl md:text-7xl font-heading font-bold text-warm-400 mb-6 animate-fade-in"
					>
						Let's Create
					</h1>
					<p
						class="text-xl md:text-2xl text-moody-300 max-w-3xl mx-auto leading-relaxed animate-fade-in-delay"
					>
						Ready to bring your vision to life? Whether it's photography, music
						production, or something entirely unique, I'm here to help you
						create something extraordinary.
					</p>
				</div>

				<!-- Main Content Grid -->
				<div class="grid lg:grid-cols-2 gap-12 items-start">
					<!-- Contact Information -->
					<div class="space-y-8 animate-slide-in-left">
						<!-- What I Do -->
						<div
							class="bg-moody-800/30 backdrop-blur-sm border border-warm-500/20 rounded-2xl p-8"
						>
							<h3 class="text-2xl font-heading font-bold text-warm-400 mb-6">
								What I Do
							</h3>
							<div class="space-y-4">
								<div class="flex items-start space-x-4">
									<div
										class="w-12 h-12 bg-warm-500/20 rounded-xl flex items-center justify-center flex-shrink-0"
									>
										<svg
											class="w-6 h-6 text-warm-400"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24"
										>
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"
											></path>
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
										</svg>
									</div>
									<div>
										<h4
											class="text-lg font-heading font-semibold text-moody-100 mb-2"
										>
											Professional Photography
										</h4>
										<p class="text-moody-400">
											Capturing moments that tell your story with artistic
											vision and technical excellence.
										</p>
									</div>
								</div>

								<div class="flex items-start space-x-4">
									<div
										class="w-12 h-12 bg-warm-500/20 rounded-xl flex items-center justify-center flex-shrink-0"
									>
										<svg
											class="w-6 h-6 text-warm-400"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24"
										>
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"
											></path>
										</svg>
									</div>
									<div>
										<h4
											class="text-lg font-heading font-semibold text-moody-100 mb-2"
										>
											Music Production
										</h4>
										<p class="text-moody-400">
											Crafting sonic experiences from concept to final mix with
											professional audio engineering.
										</p>
									</div>
								</div>

								<div class="flex items-start space-x-4">
									<div
										class="w-12 h-12 bg-warm-500/20 rounded-xl flex items-center justify-center flex-shrink-0"
									>
										<svg
											class="w-6 h-6 text-warm-400"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24"
										>
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
										</svg>
									</div>
									<div>
										<h4
											class="text-lg font-heading font-semibold text-moody-100 mb-2"
										>
											Web Development
										</h4>
										<p class="text-moody-400">
											Building digital experiences that connect, engage, and
											inspire your audience.
										</p>
									</div>
								</div>
							</div>
						</div>

						<!-- Contact Details -->
						<div
							class="bg-moody-800/30 backdrop-blur-sm border border-warm-500/20 rounded-2xl p-8"
						>
							<h3 class="text-2xl font-heading font-bold text-warm-400 mb-6">
								Get In Touch
							</h3>
							<div class="space-y-4">
								<div class="flex items-center space-x-4">
									<div
										class="w-10 h-10 bg-warm-500/20 rounded-lg flex items-center justify-center"
									>
										<svg
											class="w-5 h-5 text-warm-400"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24"
										>
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
											></path>
										</svg>
									</div>
									<div>
										<p class="text-moody-300 font-medium">Email</p>
										<a
											href="mailto:contact@shawnpapineau.com"
											class="text-warm-400 hover:text-warm-300 transition-colors"
										>
											spapineau@spaptechnology.com
										</a>
									</div>
								</div>

								<div class="flex items-center space-x-4">
									<div
										class="w-10 h-10 bg-warm-500/20 rounded-lg flex items-center justify-center"
									>
										<svg
											class="w-5 h-5 text-warm-400"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24"
										>
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
											></path>
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
										</svg>
									</div>
									<div>
										<p class="text-moody-300 font-medium">Location</p>
										<p class="text-moody-400">
											Based in Tampa, FL, working worldwide
										</p>
									</div>
								</div>

								<div class="flex items-center space-x-4">
									<div
										class="w-10 h-10 bg-warm-500/20 rounded-lg flex items-center justify-center"
									>
										<svg
											class="w-5 h-5 text-warm-400"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24"
										>
											<path
												stroke-linecap="round"
												stroke-linejoin="round"
												stroke-width="2"
												d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
										</svg>
									</div>
									<div>
										<p class="text-moody-300 font-medium">Response Time</p>
										<p class="text-moody-400">Within 24 hours</p>
									</div>
								</div>
							</div>
						</div>

						<!-- Testimonial -->
						<TestimonialCard
							client:load
							testimonial={randomTestimonial}
							index={0}
						/>
						<div>
							<!-- Contact Form -->
							<div
								class="bg-moody-800/30 backdrop-blur-sm border border-warm-500/20 rounded-2xl p-8 animate-slide-in-right"
							>
								<div class="mb-8">
									<h3
										class="text-3xl font-heading font-bold text-warm-400 mb-4"
									>
										Start Your Project
									</h3>
									<p class="text-moody-300">
										Tell me about your vision. I'll review your work and get
										back to you with next steps.
									</p>
								</div>

								<ContactForm client:load />
							</div>
						</div>
					</div>
				</div>
			</div>

			<style>
				@keyframes fadeIn {
					from {
						opacity: 0;
						transform: translateY(30px);
					}
					to {
						opacity: 1;
						transform: translateY(0);
					}
				}

				@keyframes slideInLeft {
					from {
						opacity: 0;
						transform: translateX(-50px);
					}
					to {
						opacity: 1;
						transform: translateX(0);
					}
				}

				@keyframes slideInRight {
					from {
						opacity: 0;
						transform: translateX(50px);
					}
					to {
						opacity: 1;
						transform: translateX(0);
					}
				}

				.animate-fade-in {
					animation: fadeIn 0.8s ease-out forwards;
				}

				.animate-fade-in-delay {
					animation: fadeIn 0.8s ease-out 0.2s forwards;
					opacity: 0;
				}

				.animate-slide-in-left {
					animation: slideInLeft 0.8s ease-out 0.4s forwards;
					opacity: 0;
				}

				.animate-slide-in-right {
					animation: slideInRight 0.8s ease-out 0.6s forwards;
					opacity: 0;
				}
			</style>
		</div>
	</section></RootLayout
>
