---
import MainLayout from "../layouts/MainLayout.astro";
import Hero from "../components/astro/Hero.astro";
import Services from "../components/astro/Services.astro";
import Testimonials from "../components/astro/Testimonials.astro";
import TrustedBy from "../components/astro/TrustedBy.astro";
import CTA from "../components/astro/CTA.astro";
import RecentVideosSlider from "../components/react/RecentVideosSlider";
---

<MainLayout
	title="Shawn Paps Media - Bold Creative for Brands with Grit"
	description="Web design, photography, and videography for barbers, coffee shops, construction trades, and creators. Not another agency - we create media that solves problems."
>
	<!-- Hero Section -->
	<Hero
		title="Create Something Bold"
		subtitle="We create immersive online experiences for brands with grit - barbers, coffee shops, construction trades, and creators who aren't afraid to stand out."
		ctaText="Start Your Project"
		ctaLink="/contact"
	/>

	<!-- Who We Work With -->
	<section class="py-24 md:py-32 lg:py-40 px-6 md:px-12 bg-black relative">
		<div class="absolute top-0 right-0 w-full h-full opacity-20">
			<img class="w-full h-full object-cover" src="/dh.jpg" />
		</div>

		<div class="max-w-6xl mx-auto text-center z-20">
			<h2
				class="text-5xl md:text-6xl lg:text-7xl font-black text-white mb-16 leading-none tracking-tight uppercase"
			>
				Who We Work With
			</h2>
			<div class="space-y-12">
				<p
					class="text-2xl md:text-3xl lg:text-4xl text-steel-300 leading-relaxed font-light"
				>
					We partner with <span class="text-rust-500 font-bold"
						>barbers</span
					> who treat their chairs like canvases. <span
						class="text-rust-500 font-bold">Coffee shops</span
					> that roast with purpose. <span
						class="text-rust-500 font-bold">Construction crews</span
					> building with pride. <span class="text-rust-500 font-bold"
						>Creators</span
					> making authentic work.
				</p>
				<p class="text-3xl md:text-4xl text-white font-bold">
					If you've got substance, we should talk.
				</p>
			</div>
		</div>

		<!-- Recent Videos Slider -->
		<RecentVideosSlider client:load />
	</section>

	<!-- Why We're Different -->
	<section class="py-24 md:py-32 lg:py-40 px-6 md:px-12 bg-black-soft">
		<div class="max-w-7xl mx-auto">
			<h2
				class="text-5xl md:text-6xl lg:text-7xl font-black text-white text-center mb-24 leading-none tracking-tight uppercase"
			>
				Why We're Different
			</h2>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-16">
				<!-- Card 1 -->
				<div class="border-l-4 border-rust-500 pl-8 py-4">
					<h3
						class="text-3xl md:text-4xl font-black text-white mb-4 uppercase"
					>
						No Corporate BS
					</h3>
					<p class="text-xl text-steel-300 leading-relaxed">
						We skip the jargon and the fluff. You get straight talk
						about what will actually move your business forward.
					</p>
				</div>

				<!-- Card 2 -->
				<div class="border-l-4 border-rust-500 pl-8 py-4">
					<h3
						class="text-3xl md:text-4xl font-black text-white mb-4 uppercase"
					>
						Real Grit
					</h3>
					<p class="text-xl text-steel-300 leading-relaxed">
						Authentic, bold, and unapologetic. We work with your
						brand to make tailor-made media that stands out & tells
						your story.
					</p>
				</div>

				<!-- Card 3 -->
				<div class="border-l-4 border-rust-500 pl-8 py-4">
					<h3
						class="text-3xl md:text-4xl font-black text-white mb-4 uppercase"
					>
						Built for Results
					</h3>
					<p class="text-xl text-steel-300 leading-relaxed">
						Pretty pictures are great, but we're here to solve your
						media strategy and drive growth. Every project has a
						purpose.
					</p>
				</div>

				<!-- Card 4 -->
				<div class="border-l-4 border-rust-500 pl-8 py-4">
					<h3
						class="text-3xl md:text-4xl font-black text-white mb-4 uppercase"
					>
						Fast & Modern
					</h3>
					<p class="text-xl text-steel-300 leading-relaxed">
						Built with cutting-edge tech. Your site loads instantly,
						works flawlessly, and converts visitors into customers.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Our Media Solves Problems -->
	<section class="py-24 md:py-32 lg:py-40 px-6 md:px-12 bg-black">
		<div class="max-w-7xl mx-auto text-center">
			<h2
				class="text-5xl md:text-6xl lg:text-7xl font-black text-white mb-12 leading-none tracking-tight uppercase"
			>
				Our Media Solves Problems
			</h2>
			<p
				class="text-2xl md:text-3xl text-steel-300 leading-relaxed mb-24 max-w-4xl mx-auto font-light"
			>
				We're not here to take pretty pictures. We're here to tell your
				story in a way that <span class="text-white font-bold"
					>attracts customers</span
				>, <span class="text-white font-bold">builds your brand</span>,
				and
				<span class="text-white font-bold">drives revenue</span>.
			</p>

			<div
				class="grid grid-cols-1 md:grid-cols-3 gap-12 lg:gap-16 text-left"
			>
				<div class="border-t-4 border-rust-500 pt-8">
					<div class="text-6xl mb-6">ðŸŽ¯</div>
					<h3 class="text-2xl font-black text-white mb-4 uppercase">
						Strategic Direction
					</h3>
					<p class="text-lg text-steel-300 leading-relaxed">
						Every shot, every design decision is intentional. We
						think about your goals before we pick up the camera.
					</p>
				</div>

				<div class="border-t-4 border-rust-500 pt-8">
					<div class="text-6xl mb-6">ðŸ’Ž</div>
					<h3 class="text-2xl font-black text-white mb-4 uppercase">
						Brand Differentiation
					</h3>
					<p class="text-lg text-steel-300 leading-relaxed">
						Stand out in a crowded market. We position you as the
						obvious choice for customers who get it.
					</p>
				</div>

				<div class="border-t-4 border-rust-500 pt-8">
					<div class="text-6xl mb-6">ðŸ“ˆ</div>
					<h3 class="text-2xl font-black text-white mb-4 uppercase">
						Measurable Results
					</h3>
					<p class="text-lg text-steel-300 leading-relaxed">
						Increased bookings, higher sales, stronger brand
						recognition. We track what matters.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Services -->
	<Services />

	<!-- Trusted By -->
	<TrustedBy />

	<!-- Testimonials -->
	<Testimonials />

	<!-- Final CTA -->
	<CTA
		title="Ready to Create Something Bold?"
		subtitle="Let's build an online presence that matches your ambition. No corporate BS, no cookie-cutter solutions - just real work that gets results."
		ctaText="Let's Talk"
		ctaLink="/contact"
	/>
</MainLayout>
