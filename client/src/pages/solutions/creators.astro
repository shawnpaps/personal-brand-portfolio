import VideoPlayer from "../../components/VideoPlayer.astro";
import VideoGrid from "../../components/VideoGrid.astro";
import { getPhotos, getVideos, type NotionMedia } from "../../lib/notion";

// Fetch media at build time
let photos: NotionMedia[] = [];
let videos: NotionMedia[] = [];
try {
	[photos, videos] = await Promise.all([getPhotos(), getVideos()]);
} catch (e) {
	console.error("Failed to fetch media for creators page:", e);
}

// Helper function to get a photo or fallback
const getPhotoOrFallback = (index: number, fallback: string) => {
	return photos[index] ? photos[index].url : fallback;
};

// Helper function to get a video or null
