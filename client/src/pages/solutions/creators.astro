---
import RootLayout from "../../layouts/RootLayout.astro";
import Hero from "../../components/Hero.astro";
import Card from "../../components/Card.astro";
---

<RootLayout
	title="Creative Systems for Creators | sudo.create — Artists, Musicians & Makers"
	description="We design content systems for creators. Strategy, asset production, and platforms that turn creative work into repeatable growth — helping artists, musicians, and creators across Tampa, Plant City, and Lakeland scale their storytelling."
	keywords="creative systems for creators, content workflows for artists, creator systems Tampa, performance capture, portfolio systems, content engineering for creators"
>
	<Hero
		title="Systems that make your art scale"
		subtitle="Create less panic, more posts — systems for creators"
		buttonText="Let's create together"
		videoPath="/video/water.mp4"
	/>

	<section id="next-section" class="relative z-10 py-20 px-6">
		<div class="max-w-7xl mx-auto">
			<!-- Introduction -->
			<div class="max-w-4xl mx-auto text-center mb-20">
				<h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
					Whether you're a musician, artist, designer, or content
					creator — your story deserves to be told right.
				</h2>
			</div>

			<!-- Main Message -->
			<div class="mb-20">
				<div class="prose prose-invert prose-xl max-w-4xl mx-auto">
					<p class="text-lg text-gray-300 leading-relaxed mb-6">
						sudo.create helps creators design systems that capture
						moments and turn them into ongoing storytelling engines.
						We provide asset production, performance capture, and
						creative tech that support your craft and amplify your
						voice.
					</p>
					<p class="text-lg text-gray-300 leading-relaxed">
						From templated production days and performance capture
						to portfolio platforms and creative direction — we
						connect your story to the systems that make it scale.
					</p>
				</div>
			</div>

			<!-- Screenshot Showcase 1 -->
			<div class="mb-20">
				<div
					class="card bg-base-200/50 backdrop-blur-xl border border-white/10 overflow-hidden"
				>
					<figure class="px-4 pt-4">
						<img
							src="https://images.unsplash.com/photo-1487017159836-4e23ece2e4cf?w=1200&h=600&fit=crop"
							alt="Creator portfolio example"
							class="rounded-xl w-full object-cover"
						/>
					</figure>
					<div class="card-body">
						<h3 class="card-title text-2xl text-white">
							Visual Storytelling That Resonates
						</h3>
						<p class="text-gray-300">
							Asset production and creative systems that capture
							the essence of your art — and make that work
							repeatable across platforms.
						</p>
					</div>
				</div>
			</div>

			<!-- Solutions Grid -->
			<div class="mb-20">
				<h3
					class="text-3xl md:text-4xl font-bold text-white text-center mb-12"
				>
					What We Create For You
				</h3>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
					<Card>
						<div class="flex items-start gap-4">
							<div class="text-3xl">📸</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-2">
									Brand Systems
								</h4>
								<p class="text-gray-300">
									Asset strategies and templates that capture
									your identity while keeping deliverables
									consistent and on-brand.
								</p>
							</div>
						</div>
					</Card>

					<Card>
						<div class="flex items-start gap-4">
							<div class="text-3xl">🎬</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-2">
									Performance Capture & Content
								</h4>
								<p class="text-gray-300">
									Workflows and templates for recording
									performances, promos, and project media —
									structured for reuse and multi-platform
									distribution.
								</p>
							</div>
						</div>
					</Card>

					<Card>
						<div class="flex items-start gap-4">
							<div class="text-3xl">🎨</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-2">
									Creative Direction
								</h4>
								<p class="text-gray-300">
									Strategic creative guidance to help shape
									your visual identity and storytelling
									approach.
								</p>
							</div>
						</div>
					</Card>

					<Card>
						<div class="flex items-start gap-4">
							<div class="text-3xl">💻</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-2">
									Portfolio Systems
								</h4>
								<p class="text-gray-300">
									Custom portfolio websites and content
									platforms that showcase your work
									beautifully.
								</p>
							</div>
						</div>
					</Card>

					<Card>
						<div class="flex items-start gap-4">
							<div class="text-3xl">⚡</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-2">
									Creative Tech Support
								</h4>
								<p class="text-gray-300">
									Studio tech setups, workflow automation, and
									systems that support your creative process.
								</p>
							</div>
						</div>
					</Card>
				</div>
			</div>

			<!-- Screenshot Gallery -->
			<div class="mb-20">
				<h3
					class="text-3xl md:text-4xl font-bold text-white text-center mb-12"
				>
					Visual Stories That Move People
				</h3>
				<div class="grid md:grid-cols-2 gap-8">
					<div
						class="card bg-base-200/50 backdrop-blur-xl border border-white/10 overflow-hidden"
					>
						<figure>
							<img
								src="https://images.unsplash.com/photo-1611162617474-5b21e879e113?w=800&h=400&fit=crop"
								alt="Music production workspace"
								class="w-full object-cover h-64"
							/>
						</figure>
						<div class="card-body">
							<h4 class="card-title text-white">
								For Musicians & Producers
							</h4>
							<p class="text-gray-300">
								Performance capture, promo assets, and asset
								systems that document your work and feed
								consistent release workflows across platforms.
							</p>
						</div>
					</div>

					<div
						class="card bg-base-200/50 backdrop-blur-xl border border-white/10 overflow-hidden"
					>
						<figure>
							<img
								src="https://images.unsplash.com/photo-1542038784456-1ea8e935640e?w=800&h=400&fit=crop"
								alt="Creator assets"
								class="w-full object-cover h-64"
							/>
						</figure>
						<div class="card-body">
							<h4 class="card-title text-white">
								For Artists & Creatives
							</h4>
							<p class="text-gray-300">
								Portfolio assets, exhibition documentation, and
								content that showcase your creative work.
							</p>
						</div>
					</div>

					<div
						class="card bg-base-200/50 backdrop-blur-xl border border-white/10 overflow-hidden"
					>
						<figure>
							<img
								src="https://images.unsplash.com/photo-1626785774573-4b799315345d?w=800&h=400&fit=crop"
								alt="Content creator workspace"
								class="w-full object-cover h-64"
							/>
						</figure>
						<div class="card-body">
							<h4 class="card-title text-white">
								For Content Creators
							</h4>
							<p class="text-gray-300">
								High-quality video content and systems that
								streamline your creative workflow.
							</p>
						</div>
					</div>

					<div
						class="card bg-base-200/50 backdrop-blur-xl border border-white/10 overflow-hidden"
					>
						<figure>
							<img
								src="/images/figma.png"
								alt="Designer workspace"
								class="w-full object-cover h-64"
							/>
						</figure>
						<div class="card-body">
							<h4 class="card-title text-white">For Designers</h4>
							<p class="text-gray-300">
								Brand asset systems, portfolio documentation,
								and creative tech systems that showcase your
								work.
							</p>
						</div>
					</div>
				</div>
			</div>

			<!-- Featured Case Study -->
			<div class="mb-20">
				<div
					class="hero bg-gradient-to-r from-purple-500/20 to-pink-500/20 rounded-3xl border border-white/10 overflow-hidden"
				>
					<div
						class="hero-content flex-col lg:flex-row-reverse gap-12 py-16"
					>
						<img
							src="https://images.unsplash.com/photo-1499364615650-ec38552f4f34?w=600&h=600&fit=crop"
							alt="Creator at work"
							class="max-w-sm rounded-lg shadow-2xl"
						/>
						<div>
							<h3 class="text-4xl font-bold text-white mb-4">
								Visuals That Amplify Your Voice
							</h3>
							<p class="text-lg text-gray-300 mb-6">
								Imagine having professional assets and a system
								that tells your story authentically. That's what
								we create — repeatable media and workflows that
								capture your essence and move your audience.
							</p>
							<ul class="space-y-3 mb-6">
								<li
									class="flex items-center gap-3 text-gray-300"
								>
									<span class="text-primary text-xl">✓</span>
									<span
										>Professional asset production and media
										pipelines</span
									>
								</li>
								<li
									class="flex items-center gap-3 text-gray-300"
								>
									<span class="text-primary text-xl">✓</span>
									<span>Creative direction and strategy</span>
								</li>
								<li
									class="flex items-center gap-3 text-gray-300"
								>
									<span class="text-primary text-xl">✓</span>
									<span
										>Creative systems that support your flow</span
									>
								</li>
							</ul>
							<a href="/case-studies" class="btn btn-primary">
								See Our Creative Work
							</a>
						</div>
					</div>
				</div>
			</div>

			<!-- Who This Is For -->
			<div class="mb-20">
				<h3
					class="text-3xl md:text-4xl font-bold text-white text-center mb-12"
				>
					Built For Creators Like You
				</h3>
				<div class="grid md:grid-cols-3 gap-6">
					<div
						class="card bg-gradient-to-br from-primary/10 to-transparent border border-primary/20 backdrop-blur-xl"
					>
						<div class="card-body">
							<div class="text-4xl mb-4">🎬</div>
							<h4 class="card-title text-white text-xl">
								Video Creators
							</h4>
							<p class="text-gray-300">
								YouTube, TikTok, Instagram creators who need
								multi-platform workflows and audience insights.
							</p>
						</div>
					</div>

					<div
						class="card bg-gradient-to-br from-secondary/10 to-transparent border border-secondary/20 backdrop-blur-xl"
					>
						<div class="card-body">
							<div class="text-4xl mb-4">✍️</div>
							<h4 class="card-title text-white text-xl">
								Writers & Authors
							</h4>
							<p class="text-gray-300">
								Newsletter automation, publishing workflows, and
								audience engagement systems.
							</p>
						</div>
					</div>

					<div
						class="card bg-gradient-to-br from-accent/10 to-transparent border border-accent/20 backdrop-blur-xl"
					>
						<div class="card-body">
							<div class="text-4xl mb-4">🎨</div>
							<h4 class="card-title text-white text-xl">
								Artists & Designers
							</h4>
							<p class="text-gray-300">
								Portfolio systems, exhibition documentation, and
								visual content that showcases your creative
								work.
							</p>
						</div>
					</div>
				</div>
			</div>

			<!-- Process Preview with Images -->
			<div class="mb-20">
				<h3
					class="text-3xl md:text-4xl font-bold text-white text-center mb-12"
				>
					How We Support Your Creative Journey
				</h3>
				<div class="space-y-8">
					<div class="flex flex-col md:flex-row gap-8 items-center">
						<div class="md:w-1/2">
							<div class="badge badge-primary mb-4">Step 1</div>
							<h4 class="text-2xl font-bold text-white mb-4">
								Understand Your Vision
							</h4>
							<p class="text-gray-300 text-lg">
								We dive deep into your story, your art, and what
								makes you unique. Every creator has a different
								voice — your visuals should reflect that.
							</p>
						</div>
						<div class="md:w-1/2">
							<img
								src="https://images.unsplash.com/photo-1531403009284-440f080d1e12?w=600&h=400&fit=crop"
								alt="Creative workflow discussion"
								class="rounded-xl shadow-2xl w-full"
							/>
						</div>
					</div>

					<div
						class="flex flex-col md:flex-row-reverse gap-8 items-center"
					>
						<div class="md:w-1/2">
							<div class="badge badge-secondary mb-4">Step 2</div>
							<h4 class="text-2xl font-bold text-white mb-4">
								Capture Your Story
							</h4>
							<p class="text-gray-300 text-lg">
								We create visual content and systems that feel
								authentic and look cinematic. Your story
								deserves to be told right.
							</p>
						</div>
						<div class="md:w-1/2">
							<img
								src="https://images.unsplash.com/photo-1498050108023-c5249f4df085?w=600&h=400&fit=crop"
								alt="Building creative systems"
								class="rounded-xl shadow-2xl w-full"
							/>
						</div>
					</div>

					<div class="flex flex-col md:flex-row gap-8 items-center">
						<div class="md:w-1/2">
							<div class="badge badge-accent mb-4">Step 3</div>
							<h4 class="text-2xl font-bold text-white mb-4">
								Amplify Your Reach
							</h4>
							<p class="text-gray-300 text-lg">
								Launch with content that resonates and systems
								that empower. We provide ongoing creative
								support as your artistic practice evolves.
							</p>
						</div>
						<div class="md:w-1/2">
							<img
								src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=600&h=400&fit=crop"
								alt="Creative success"
								class="rounded-xl shadow-2xl w-full"
							/>
						</div>
					</div>
				</div>
			</div>

			<!-- Final CTA -->
			<div class="text-center">
				<div class="max-w-3xl mx-auto mb-8">
					<h3 class="text-3xl md:text-4xl font-bold text-white mb-6">
						Ready to Tell Your Story?
					</h3>
					<p class="text-xl text-gray-300 mb-8">
						Let's create visuals that capture your essence, systems
						that support your art, and stories that move people.
					</p>
				</div>
				<a
					href="/contact"
					class="btn btn-primary btn-lg rounded-full text-lg px-8"
				>
					Let's create together
				</a>
			</div>
		</div>
	</section>
</RootLayout>
