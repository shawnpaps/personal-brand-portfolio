---
import RootLayout from "../../layouts/RootLayout.astro";
import Hero from "../../components/Hero.astro";
import Card from "../../components/Card.astro";
---

<RootLayout
	title="Tampa Web Design for Creators | Content Systems & Automation | sudo.create"
	description="Web design and automation systems for Tampa Bay creators, musicians, photographers, and content creators. Custom portfolio sites, booking systems, and content distribution tools."
	keywords="web design for creators Tampa, portfolio website design Florida, creator automation Tampa Bay, content creator tools Tampa, musician website design Plant City, photographer portfolio Lakeland, Tampa creative web design"
>
	<Hero
		title="Empower your creative practice"
		subtitle="with systems that work as beautifully as your art."
		buttonText="Let's make technology work for your creativity"
		videoPath="/video/water.mp4"
	/>

	<section id="next-section" class="relative z-10 py-20 px-6">
		<div class="max-w-7xl mx-auto">
			<!-- Introduction -->
			<div class="max-w-4xl mx-auto text-center mb-20">
				<h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
					Whether you're a musician, photographer, designer, or
					content creator — you don't need more tools. You need better
					systems.
				</h2>
			</div>

			<!-- Main Message -->
			<div class="mb-20">
				<div class="prose prose-invert prose-xl max-w-4xl mx-auto">
					<p class="text-lg text-gray-300 leading-relaxed mb-6">
						sudo.create helps creators focus on creativity, not
						logistics. We build digital spaces and automation
						workflows that support your craft, streamline your
						business, and give you time back to make.
					</p>
					<p class="text-lg text-gray-300 leading-relaxed">
						From custom websites that showcase your work to backend
						systems that handle clients, bookings, and content
						delivery — we bring technical clarity to your creative
						life.
					</p>
				</div>
			</div>

			<!-- Screenshot Showcase 1 -->
			<div class="mb-20">
				<div
					class="card bg-base-200/50 backdrop-blur-xl border border-white/10 overflow-hidden"
				>
					<figure class="px-4 pt-4">
						<img
							src="https://images.unsplash.com/photo-1487017159836-4e23ece2e4cf?w=1200&h=600&fit=crop"
							alt="Creator portfolio example"
							class="rounded-xl w-full object-cover"
						/>
					</figure>
					<div class="card-body">
						<h3 class="card-title text-2xl text-white">
							Beautiful Portfolio Sites
						</h3>
						<p class="text-gray-300">
							Custom websites that showcase your work with the
							attention it deserves.
						</p>
					</div>
				</div>
			</div>

			<!-- Solutions Grid -->
			<div class="mb-20">
				<h3
					class="text-3xl md:text-4xl font-bold text-white text-center mb-12"
				>
					Possible Solutions
				</h3>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
					<Card>
						<div class="flex items-start gap-4">
							<div class="text-3xl">🎨</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-2">
									Custom Portfolio Sites
								</h4>
								<p class="text-gray-300">
									Custom portfolio or eCommerce websites that
									showcase your creative work beautifully.
								</p>
							</div>
						</div>
					</Card>

					<Card>
						<div class="flex items-start gap-4">
							<div class="text-3xl">📦</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-2">
									Digital Asset Management
								</h4>
								<p class="text-gray-300">
									Digital asset management systems that
									organize, tag, and deliver your content
									effortlessly.
								</p>
							</div>
						</div>
					</Card>

					<Card>
						<div class="flex items-start gap-4">
							<div class="text-3xl">📅</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-2">
									Client Automation
								</h4>
								<p class="text-gray-300">
									Client booking and communication automations
									that handle the business side for you.
								</p>
							</div>
						</div>
					</Card>

					<Card>
						<div class="flex items-start gap-4">
							<div class="text-3xl">🤖</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-2">
									AI-Assisted Workflows
								</h4>
								<p class="text-gray-300">
									AI-assisted creative workflows for content
									tagging, delivery, and organization.
								</p>
							</div>
						</div>
					</Card>

					<Card>
						<div class="flex items-start gap-4">
							<div class="text-3xl">📊</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-2">
									Audience Insights
								</h4>
								<p class="text-gray-300">
									Data-driven systems for audience insights
									and growth tracking across platforms.
								</p>
							</div>
						</div>
					</Card>

					<Card>
						<div class="flex items-start gap-4">
							<div class="text-3xl">💰</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-2">
									Monetization Systems
								</h4>
								<p class="text-gray-300">
									Digital product delivery, memberships, and
									payment systems that turn fans into revenue.
								</p>
							</div>
						</div>
					</Card>
				</div>
			</div>

			<!-- Screenshot Gallery -->
			<div class="mb-20">
				<h3
					class="text-3xl md:text-4xl font-bold text-white text-center mb-12"
				>
					Systems That Support Your Craft
				</h3>
				<div class="grid md:grid-cols-2 gap-8">
					<div
						class="card bg-base-200/50 backdrop-blur-xl border border-white/10 overflow-hidden"
					>
						<figure>
							<img
								src="https://images.unsplash.com/photo-1611162617474-5b21e879e113?w=800&h=400&fit=crop"
								alt="Music production workspace"
								class="w-full object-cover h-64"
							/>
						</figure>
						<div class="card-body">
							<h4 class="card-title text-white">
								For Musicians & Producers
							</h4>
							<p class="text-gray-300">
								Booking systems, release management, and fan
								engagement tools that amplify your reach.
							</p>
						</div>
					</div>

					<div
						class="card bg-base-200/50 backdrop-blur-xl border border-white/10 overflow-hidden"
					>
						<figure>
							<img
								src="https://images.unsplash.com/photo-1542038784456-1ea8e935640e?w=800&h=400&fit=crop"
