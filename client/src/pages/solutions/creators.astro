---
import RootLayout from "../../layouts/RootLayout.astro";
import Hero from "../../components/Hero.astro";
import Card from "../../components/Card.astro";
---

<RootLayout
	title="Photography & Videography for Artists, Musicians & Creators | Tampa | sudo.create"
	description="Professional photography, videography, and audio production for Tampa Bay artists, musicians, and content creators. Music video production, brand photography, podcast audio editing, and creative systems that support your artistic journey. Serving Tampa, Plant City, and Lakeland creative communities."
	keywords="music video production Tampa, artist photography Tampa Bay, musician photographer Florida, Tampa music photographer, band photography Tampa, artist videography Tampa Bay, podcast audio production Tampa, content creator videography Florida, music video Tampa, creative portrait photography Tampa Bay, Tampa musician videography, artist branding photography Plant City, music photography Lakeland, Tampa Bay music video production, creative content Tampa"
>
	<Hero
		title="Your art deserves to be seen"
		subtitle="Visual media and creative systems that amplify your story."
		buttonText="Let's create together"
		videoPath="/video/water.mp4"
	/>

	<section id="next-section" class="relative z-10 py-20 px-6">
		<div class="max-w-7xl mx-auto">
			<!-- Introduction -->
			<div class="max-w-4xl mx-auto text-center mb-20">
				<h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
					Whether you're a musician, artist, designer, or content
					creator — your story deserves to be told right.
				</h2>
			</div>

			<!-- Main Message -->
			<div class="mb-20">
				<div class="prose prose-invert prose-xl max-w-4xl mx-auto">
					<p class="text-lg text-gray-300 leading-relaxed mb-6">
						sudo.create helps creators capture moments that matter.
						We offer photography, videography, audio production, and
						creative tech that supports your craft and amplifies
						your voice.
					</p>
					<p class="text-lg text-gray-300 leading-relaxed">
						From brand photography and music videos to portfolio
						systems and creative direction — we bring visual
						storytelling and infrastructure to your creative
						journey.
					</p>
				</div>
			</div>

			<!-- Screenshot Showcase 1 -->
			<div class="mb-20">
				<div
					class="card bg-base-200/50 backdrop-blur-xl border border-white/10 overflow-hidden"
				>
					<figure class="px-4 pt-4">
						<img
							src="https://images.unsplash.com/photo-1487017159836-4e23ece2e4cf?w=1200&h=600&fit=crop"
							alt="Creator portfolio example"
							class="rounded-xl w-full object-cover"
						/>
					</figure>
					<div class="card-body">
						<h3 class="card-title text-2xl text-white">
							Visual Storytelling That Resonates
						</h3>
						<p class="text-gray-300">
							Photography and videography that captures the
							essence of your art and tells your story
							authentically.
						</p>
					</div>
				</div>
			</div>

			<!-- Solutions Grid -->
			<div class="mb-20">
				<h3
					class="text-3xl md:text-4xl font-bold text-white text-center mb-12"
				>
					What We Create For You
				</h3>
				<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
					<Card>
						<div class="flex items-start gap-4">
							<div class="text-3xl">📸</div>
							<div>
								<h4 class="text-xl font-bold text-white mb-2">
									Brand Photography
								</h4>
								<p class="text-gray-300">
									Professional photography that captures your
									artistic identity and makes your brand
									unforgettable.
								</p>
							</div>
						</div>
					</Card>

					<Card>
						<div class="flex items-start gap-4">
