---
import RootLayout from "../layouts/RootLayout.astro";
import ContactForm from "../components/blocks/react/ContactForm.tsx";
import SocialLinks from "../components/SocialLinks.astro";
---

<RootLayout
	title="contact sudo.create | let's begin"
	description="Ready to capture something real? Film, photography, and audio that stirs feeling. Platforms that perform like poetry. Stories born from intention — systems that sustain the vision."
	keywords="cinematic studio, contact, film production, photography, videography, audio production, creative direction, visual storytelling, brand film"
>
	<section class="py-20 mt-16 px-8 pt-24 z-30 text-white relative">
		<div class="max-w-4xl mx-auto text-center space-y-6">
			<h2 class="text-5xl font-bold mb-4">
				Let's create something that lingers.
			</h2>
			<p class="text-xl max-w-xl mx-auto font-semibold">
				Need a story captured through the lens? A platform that breathes
				with your vision? Work that moves people before it moves
				metrics? Bring the feeling — we'll bring the light, sound, and
				systems to sustain it.
			</p>
		</div>
	</section>
	<div class="mt-8">
		<ContactForm client:load />
	</div>

	<!-- Social Links Section -->
	<div class="max-w-4xl mx-auto mt-16 pt-16 border-t border-white/10">
		<div class="text-center space-y-6">
			<h3 class="text-2xl font-bold">Behind the lens</h3>
			<p class="text-gray-300 max-w-md mx-auto">
				Process glimpses, creative reflections, and moments between
				frames. Follow sudo.create for the stories we're chasing and the
				systems that help us catch them.
			</p>
		</div>
		<SocialLinks variant="contact" size="lg" />
	</div>
</RootLayout>
