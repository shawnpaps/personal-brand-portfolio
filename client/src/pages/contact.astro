---
import RootLayout from "../layouts/RootLayout.astro";
import ContactForm from "../components/blocks/react/ContactForm.tsx";
import SocialLinks from "../components/SocialLinks.astro";
---

<RootLayout
	title="contact sudo.create | cinematic creative studio — start a project"
	description="start the conversation about cinematic storytelling. film, photo, and sound — crafted to evoke feeling and connect your audience. we produce work and the systems that make it repeatable, memorable, and damn good."
	keywords="cinematic studio, contact, film production, photography, audio production, crafted visuals, cinematic storytelling, creative studio"
>
	<section class="py-20 mt-16 px-8 pt-24 z-30 text-white relative">
		<div class="max-w-4xl mx-auto text-center space-y-6">
			<h2 class="text-5xl font-bold mb-4">
				let's make something cinematic.
			</h2>
			<p class="text-xl max-w-xl mx-auto font-semibold">
				start with a conversation. need a short film, a photo suite, or
				a full sound design? sudo.create crafts cinematic work and the
				systems to keep it alive. tell us what you feel — we'll handle
				the plan, the craft, and the tiny, nitpicky details. yes, snacks
				optional but encouraged.
			</p>
		</div>
	</section>
	<div class="mt-8">
		<ContactForm client:load />
	</div>

	<!-- Social Links Section -->
	<div class="max-w-4xl mx-auto mt-16 pt-16 border-t border-white/10">
		<div class="text-center space-y-6">
			<h3 class="text-2xl font-bold">follow along</h3>
			<p class="text-gray-300 max-w-md mx-auto">
				peek behind the curtain: edits, moods, gear, and the little
				moments that make films feel alive. follow sudo.create for the
				work, the process, and occasional cheeky outtakes.
			</p>
		</div>
		<SocialLinks variant="contact" size="lg" />
	</div>
</RootLayout>
