---
import RootLayout from "../layouts/RootLayout.astro";
import ContactForm from "../components/blocks/react/ContactForm.tsx";
import SocialLinks from "../components/SocialLinks.astro";
---

<RootLayout
	title="contact sudo.create | let's build your system"
	description="Ready to build something that hums? Brand photography, high-powered websites, content pipelines, and custom tools. We fuse artistry with automation — no fluff, just systems that work."
	keywords="creative tech studio, contact, brand photography, web development, content systems, marketing automation, custom tools"
>
	<section class="py-20 mt-16 px-8 pt-24 z-30 text-white relative">
		<div class="max-w-4xl mx-auto text-center space-y-6">
			<h2 class="text-5xl font-bold mb-4">Let's build your system.</h2>
			<p class="text-xl max-w-xl mx-auto font-semibold">
				Need brand photography? A website that actually converts?
				Content pipelines that run on autopilot? We build creative
				systems that make growth feel effortless. Bring the vision —
				we'll handle the strategy, the code, and the coffee breaks.
			</p>
		</div>
	</section>
	<div class="mt-8">
		<ContactForm client:load />
	</div>

	<!-- Social Links Section -->
	<div class="max-w-4xl mx-auto mt-16 pt-16 border-t border-white/10">
		<div class="text-center space-y-6">
			<h3 class="text-2xl font-bold">Follow the build</h3>
			<p class="text-gray-300 max-w-md mx-auto">
				Behind-the-scenes builds, system breakdowns, and the occasional
				hot take on creative tech. Follow sudo.create for the work, the
				process, and proof that automation doesn't have to be boring.
			</p>
		</div>
		<SocialLinks variant="contact" size="lg" />
	</div>
</RootLayout>
