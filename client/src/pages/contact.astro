---
import RootLayout from "../layouts/RootLayout.astro";
import ContactForm from "../components/blocks/react/ContactForm.tsx";
import SocialLinks from "../components/SocialLinks.astro";
---

<RootLayout
	title="Contact sudo.create | Creative Systems Studio | Start a Project"
	description="Start the conversation about content systems, strategy, and production. We design content workflows, build the tooling, and create assets that feed scalable storytelling for artists, brands, and events across Tampa Bay, Plant City, and Lakeland."
	keywords="contact creative systems, content workflows Tampa, content strategy Tampa, creative systems studio, content automation, book content strategy, Tampa creative technology, content engineering"
>
	<section class="py-20 mt-16 px-8 pt-24 z-30 text-white relative">
		<div class="max-w-4xl mx-auto text-center space-y-6">
			<h2 class="text-5xl font-bold mb-4">Let's build your story.</h2>
			<p class="text-xl max-w-xl mx-auto font-semibold">
				Every great project starts with a conversation. Whether you need
				a content blueprint, a production day, or an integrated
				systemâ€”let's design a workflow that scales your story.
			</p>
		</div>
	</section>
	<div class="mt-8">
		<ContactForm client:load />
	</div>

	<!-- Social Links Section -->
	<div class="max-w-4xl mx-auto mt-16 pt-16 border-t border-white/10">
		<div class="text-center space-y-6">
			<h3 class="text-2xl font-bold">Connect With Me</h3>
			<p class="text-gray-300 max-w-md mx-auto">
				Follow along for behind-the-scenes moments, creative insights,
				and the work that keeps us inspired.
			</p>
		</div>
		<SocialLinks variant="contact" size="lg" />
	</div>
</RootLayout>
