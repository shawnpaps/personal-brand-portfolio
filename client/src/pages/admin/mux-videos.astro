---
import MainLayout from "../../layouts/MainLayout.astro";
import MuxVideoManager from "../../components/react/MuxVideoManager";
---

<MainLayout
	title="Mux Video Manager - Admin"
	description="Manage your Mux video assets"
>
	<section class="py-24 md:py-32 lg:py-40 px-6 md:px-12 bg-black pt-32 min-h-screen">
		<div class="max-w-7xl mx-auto max-w-7xl">
			<div class="mb-12">
				<h1 class="text-5xl md:text-6xl lg:text-7xl font-black text-white mb-4">
					Mux Video Manager
				</h1>
				<p class="text-xl text-steel-400">
					View, preview, and copy playback IDs from your Mux account
				</p>
			</div>

			<MuxVideoManager client:load showPreviews={true} />
		</div>
	</section>
</MainLayout>
