---
import MainLayout from "../layouts/MainLayout.astro";
import S3PhotoGallery from "../components/react/S3PhotoGallery";
---

<MainLayout
	title="Photography Portfolio - Shawn Paps Media"
	description="Dark, grungy, moody photography for brands with grit. Browse our lookbook-style portfolio filtered by mood, aesthetic, subject, and industry."
>
	<!-- Hero Section -->
	<section class="py-24 md:py-32 lg:py-40 px-6 md:px-12 bg-black pt-32">
		<div class="max-w-7xl mx-auto text-center max-w-4xl">
			<h1
				class="text-5xl md:text-6xl lg:text-7xl font-black text-white mb-6"
			>
				Photography
			</h1>
			<p class="text-xl text-steel-400 leading-relaxed mb-8">
				Dark, grungy, moody shots that capture raw authenticity. Not
				polished corporate photography - real moments with real impact.
			</p>
		</div>
	</section>

	<section class="py-24 md:py-32 lg:py-40 px-6 md:px-12 bg-black">
		<div class="max-w-7xl mx-auto">
			<S3PhotoGallery folder="main-portfolio" client:load />
		</div>
	</section>

	<section
		class="py-24 md:py-32 lg:py-40 px-6 md:px-12 bg-gradient-to-br from-rust-500 to-rust-400"
	>
		<div class="max-w-7xl mx-auto text-center">
			<h2
				class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-6"
			>
				Need Photography Like This?
			</h2>
			<p class="text-xl text-white/90 max-w-2xl mx-auto mb-12">
				Let's create images that capture the real essence of your brand.
				No fake smiles or stock photo vibes - just authentic work that
				resonates.
			</p>
			<a
				href="/contact"
				class="inline-block bg-black hover:bg-black-soft text-white font-bold text-lg px-12 py-4 rounded-lg transition-all hover:scale-105"
			>
				Get in Touch
			</a>
		</div>
	</section>
</MainLayout>
