---
import { Instagram, Linkedin, Github, Mail } from "lucide-astro";

interface Props {
	variant?: "navbar" | "footer" | "contact";
	size?: "sm" | "md" | "lg";
}

const { variant = "footer", size = "md" } = Astro.props;

const buttonSizeClass = {
	sm: "btn-sm",
	md: "btn-md",
	lg: "btn-lg",
}[size];

const containerClass = {
	navbar: "flex gap-2",
	footer: "flex gap-3 justify-center",
	contact: "flex flex-wrap gap-4 justify-center",
}[variant];

const socialLinks = [
	{
		name: "instagram — behind the scenes",
		url: "https://instagram.com/sudo.create",
		icon: Instagram,
		color: "hover:text-pink-500",
	},
	{
		name: "newsletter — studio notes",
		url: "https://riffscodecoffee.com",
		icon: Mail,
		color: "hover:text-blue-500",
		label: "newsletter",
	},
	{
		name: "linkedin — studio updates",
		url: "https://linkedin.com/in/shawn-papineau",
		icon: Linkedin,
		color: "hover:text-blue-600",
	},
	{
		name: "github — behind the tools",
		url: "https://github.com/shawnpaps",
		icon: Github,
		color: "hover:text-gray-400",
	},
];
---

<div class={containerClass}>
	{
		socialLinks.map((social) => (
			<a
				href={social.url}
				target="_blank"
				rel="noopener noreferrer"
				class={`btn btn-circle btn-ghost ${buttonSizeClass} ${social.color} transition-all hover:scale-110`}
				aria-label={social.name}
				title={social.name}
			>
				<social.icon
					size={size === "sm" ? 18 : size === "md" ? 20 : 24}
				/>
			</a>
		))
	}
</div>
