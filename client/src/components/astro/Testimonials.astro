---
import testimonials from '../../data/testimonials.json';
---

<section class="py-24 md:py-32 lg:py-40 px-6 md:px-12 bg-black relative overflow-hidden">
  <!-- Background Accent -->
  <div class="absolute bottom-0 left-0 w-full h-1/2 bg-gradient-to-t from-black-soft to-transparent pointer-events-none"></div>

  <div class="max-w-7xl mx-auto relative z-10">
    <h2 class="text-4xl md:text-5xl lg:text-6xl font-black text-white text-center mb-20">
      What Clients Say
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-10 max-w-6xl mx-auto">
      {testimonials.map((testimonial, index) => (
        <div class="bg-black-soft/50 backdrop-blur-xl border border-white/10 p-10 rounded-2xl group hover:scale-[1.02] transition-all duration-500" style={`animation-delay: ${index * 0.1}s;`}>
          <!-- Quote Icon -->
          <div class="mb-8 relative">
            <svg class="w-16 h-16 text-rust-500/30 group-hover:text-rust-500/50 transition-colors duration-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"/>
            </svg>
          </div>

          <!-- Testimonial Text -->
          <p class="text-white text-lg md:text-xl mb-8 leading-relaxed italic">
            "{testimonial.quote}"
          </p>

          <!-- Author Info -->
          <div class="flex items-center gap-4 pt-6 border-t border-steel-800/30">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-rust-500 to-rust-400 flex items-center justify-center text-white font-bold text-xl">
              {testimonial.author.charAt(0)}
            </div>
            <div>
              <p class="text-white font-bold text-lg">{testimonial.author}</p>
              <p class="text-steel-400 text-sm">
                {testimonial.role}, {testimonial.company}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
