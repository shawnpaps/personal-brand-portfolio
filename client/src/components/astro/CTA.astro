---
interface Props {
	title: string;
	subtitle: string;
	ctaText: string;
	ctaLink: string;
}

const { title, subtitle, ctaText, ctaLink } = Astro.props;
---

<section
	class="py-16 md:py-24 lg:py-32 px-4 md:px-8 lg:px-12 bg-black relative overflow-hidden"
>
	<!-- Advanced Background Effects -->
	<div class="absolute inset-0">
		<!-- Radial Gradient Glow -->
		<div
			class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[1200px] h-[800px] bg-gradient-to-r from-rust-500/20 via-rust-600/10 to-transparent rounded-full blur-3xl animate-glow-pulse"
		>
		</div>

		<!-- Animated Orbs -->
		<div
			class="absolute top-1/4 left-1/4 w-96 h-96 bg-rust-500/10 rounded-full blur-[100px] animate-float-slow"
		>
		</div>
		<div
			class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-rust-400/10 rounded-full blur-[100px] animate-float"
			style="animation-delay: 2s;"
		>
		</div>
	</div>

	<!-- Content Container -->
	<div class="max-w-5xl mx-auto relative z-10">
		<!-- Glass Card with Enhanced Effects -->
		<div
			class="bg-black-card/85 backdrop-blur-xl border border-white/10 shadow-2xl p-12 md:p-16 lg:p-20 rounded-3xl relative overflow-hidden group"
		>
			<!-- Animated Border Gradient -->
			<div
				class="absolute inset-0 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none"
			>
				<div
					class="absolute inset-0 rounded-3xl border-2 border-transparent bg-gradient-to-br from-rust-500/40 via-rust-400/20 to-rust-600/40 bg-clip-border"
					style="
						-webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
						-webkit-mask-composite: xor;
						mask-composite: exclude;
					"
				>
				</div>
			</div>

			<!-- Spotlight Effect -->
			<div
				class="absolute -top-40 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-rust-500/10 rounded-full blur-[80px] pointer-events-none opacity-60 group-hover:opacity-100 transition-opacity duration-700"
			>
			</div>

			<!-- Content -->
			<div class="relative z-10 text-center">
				<!-- Overline -->
				<div class="mb-8 animate-fade-in">
					<span
						class="inline-flex items-center gap-2 text-rust-400 font-bold text-sm tracking-[0.2em] uppercase"
					>
						<span
							class="w-12 h-[2px] bg-gradient-to-r from-transparent to-rust-500"
						></span>
						Let's Work Together
						<span
							class="w-12 h-[2px] bg-gradient-to-l from-transparent to-rust-500"
						></span>
					</span>
				</div>

				<!-- Title -->
				<h2
					class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-8 leading-tight animate-fade-in-up"
					style="animation-delay: 0.1s;"
				>
					{title}
				</h2>

				<!-- Subtitle -->
				<p
					class="text-xl md:text-2xl lg:text-3xl text-steel-300 max-w-3xl mx-auto mb-14 leading-relaxed font-light animate-fade-in-up"
					style="animation-delay: 0.2s;"
				>
					{subtitle}
				</p>

				<!-- CTA Button Group -->
				<div
					class="flex flex-col sm:flex-row gap-5 justify-center items-center animate-fade-in-up"
					style="animation-delay: 0.3s;"
				>
					<!-- Primary CTA -->
					<a
						href={ctaLink}
						class="group/btn relative inline-flex items-center gap-3 bg-gradient-to-r from-rust-500 to-rust-400 hover:from-rust-400 hover:to-rust-300 text-white font-bold text-lg px-12 py-5 rounded-full transition-all duration-700 hover:scale-105 shadow-2xl hover:shadow-rust-500/50 overflow-hidden"
					>
						<span class="relative z-10">{ctaText}</span>
						<svg
							class="w-5 h-5 relative z-10 transition-transform duration-500 group-hover/btn:translate-x-1"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2.5"
								d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
						</svg>

						<!-- Shimmer Effect -->
						<div
							class="absolute inset-0 -translate-x-full group-hover/btn:animate-shimmer opacity-60 bg-gradient-to-r from-transparent via-white/20 to-transparent"
						>
						</div>

						<!-- Glow Layer -->
						<div
							class="absolute inset-0 bg-white/20 blur-xl opacity-0 group-hover/btn:opacity-30 transition-opacity duration-700"
						>
						</div>
					</a>

					<!-- Secondary CTA -->
					<a
						href="tel:+1234567890"
						class="group/btn inline-flex items-center gap-3 text-white font-semibold text-lg px-8 py-5 rounded-full border-2 border-white/10 hover:border-rust-500/50 hover:bg-rust-500/10 transition-all duration-500 hover:scale-105"
					>
						<svg
							class="w-5 h-5"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
							></path>
						</svg>
						<span>Or Call Us</span>
					</a>
				</div>

				<!-- Trust Indicators -->
				<div
					class="mt-14 pt-10 border-t border-white/5 flex flex-wrap items-center justify-center gap-8 text-steel-400 text-sm animate-fade-in"
					style="animation-delay: 0.4s;"
				>
					<div class="flex items-center gap-2">
						<svg
							class="w-5 h-5 text-rust-500"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
							></path>
						</svg>
						<span class="font-semibold">24-48h</span>
						<span>Response Time</span>
					</div>
					<div class="w-px h-4 bg-white/10"></div>
					<div class="flex items-center gap-2">
						<svg
							class="w-5 h-5 text-rust-500"
							fill="currentColor"
							viewBox="0 0 20 20"
						>
							<path
								fill-rule="evenodd"
								d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
								clip-rule="evenodd"></path>
						</svg>
						<span class="font-semibold">100%</span>
						<span>Client Satisfaction</span>
					</div>
					<div class="w-px h-4 bg-white/10"></div>
					<div class="flex items-center gap-2">
						<svg
							class="w-5 h-5 text-rust-500"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
							></path>
						</svg>
						<span class="font-semibold">No</span>
						<span>Contracts Required</span>
					</div>
				</div>
			</div>

			<!-- Corner Decorations -->
			<div
				class="absolute top-8 left-8 w-16 h-16 border-l-2 border-t-2 border-rust-500/20 rounded-tl-3xl pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity duration-700"
			>
			</div>
			<div
				class="absolute bottom-8 right-8 w-16 h-16 border-r-2 border-b-2 border-rust-500/20 rounded-br-3xl pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity duration-700"
			>
			</div>
		</div>
	</div>
</section>
