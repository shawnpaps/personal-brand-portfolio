---
interface Props {
	title: string;
	subtitle?: string;
	ctaText: string;
	ctaLink: string;
}

const { title, subtitle, ctaText, ctaLink } = Astro.props;

import VideoPlayer from "../react/VideoPlayer.tsx";
---

<section
	class="relative min-h-screen flex items-center justify-center bg-black overflow-hidden"
>
	<div class="absolute inset-0 bg-black/50 backdrop-blur-sm z-10"></div>
	<div
		class="w-full h-full mx-auto rounded-lg overflow-hidden shadow-lg absolute top-0"
	>
		<VideoPlayer
			playbackId="A3BuaIkdudwLyZq83F3R4lQEOcM9aSMeeNK02y2NP0000o"
			client:load
		/>
	</div>
	<!-- Minimal background glow -->
	<div class="absolute inset-0">
		<div
			class="absolute top-1/3 left-1/4 w-[600px] h-[600px] bg-rust-500/10 rounded-full blur-[150px] opacity-50"
		>
		</div>
	</div>

	<!-- Content -->
	<div
		class="relative z-10 max-w-7xl mx-auto px-6 md:px-12 py-32 text-center"
	>
		<!-- Massive headline -->
		<h1
			class="text-7xl md:text-8xl lg:text-9xl font-black text-white mb-8 leading-none tracking-tighter uppercase"
		>
			{title}
		</h1>

		{
			subtitle && (
				<p class="text-xl md:text-2xl lg:text-3xl text-steel-300 max-w-4xl mx-auto mb-16 leading-relaxed font-light">
					{subtitle}
				</p>
			)
		}

		<!-- Bold CTA -->
		<div
			class="flex flex-col sm:flex-row gap-6 justify-center items-center"
		>
			<a
				href={ctaLink}
				class="group px-12 py-5 bg-rust-500 hover:bg-rust-400 text-white text-lg font-bold uppercase tracking-wide transition-all duration-300 hover:scale-105"
			>
				{ctaText}
			</a>
		</div>

		<!-- Simple trust indicators -->
		<div
			class="mt-20 flex flex-wrap items-center justify-center gap-12 text-steel-400 text-sm uppercase tracking-widest"
		>
			<div class="flex items-center gap-3">
				<span class="text-2xl font-black text-rust-500">50+</span>
				<span>Clients</span>
			</div>
			<div class="w-px h-8 bg-white/10"></div>
			<div class="flex items-center gap-3">
				<span class="text-2xl font-black text-rust-500">100+</span>
				<span>Projects</span>
			</div>
			<div class="w-px h-8 bg-white/10"></div>
			<div class="flex items-center gap-3">
				<span class="text-2xl font-black text-rust-500">5.0</span>
				<span>Rating</span>
			</div>
		</div>
	</div>

	<!-- Minimal scroll indicator -->
	<div class="absolute bottom-12 left-1/2 -translate-x-1/2 z-10">
		<div class="w-px h-16 bg-gradient-to-b from-rust-500 to-transparent">
		</div>
	</div>
</section>
