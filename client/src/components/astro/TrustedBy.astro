---
import clients from "../../data/clients.json";
---

<section
	class="py-24 md:py-32 lg:py-40 px-6 md:px-12 bg-black-soft relative overflow-hidden"
>
	<!-- Subtle Glow -->
	<div
		class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] bg-rust-500/5 rounded-full blur-[150px] pointer-events-none"
	>
	</div>

	<div class="max-w-7xl mx-auto relative z-10">
		<div class="text-center mb-16">
			<h2
				class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-4"
			>
				Trusted By
			</h2>
			<p class="text-xl text-steel-400">Bold brands we've worked with</p>
		</div>

		<div
			class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12 max-w-5xl mx-auto items-center"
		>
			{
				clients.map((client, index) => (
					<div
						class="bg-black-soft/50 backdrop-blur-xl border border-white/10 p-8 rounded-xl flex items-center justify-center grayscale hover:grayscale-0 transition-all duration-500 hover:scale-110 opacity-60 hover:opacity-100"
						style={`animation-delay: ${index * 0.05}s;`}
					>
						<img
							src={client.logoUrl}
							alt={client.name}
							class="max-w-full h-auto"
						/>
					</div>
				))
			}
		</div>
	</div>
</section>
