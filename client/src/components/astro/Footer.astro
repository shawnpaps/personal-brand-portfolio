---

<footer class="relative bg-black-soft border-t border-white/5 overflow-hidden">
	<!-- Background Effects -->
	<div
		class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[400px] bg-rust-500/5 rounded-full blur-[120px] pointer-events-none"
	>
	</div>
	<div
		class="absolute bottom-0 right-0 w-[600px] h-[400px] bg-rust-600/5 rounded-full blur-[100px] pointer-events-none"
	>
	</div>

	<div class="max-w-7xl mx-auto px-4 md:px-8 lg:px-12 relative z-10">
		<!-- Main Footer Content -->
		<div
			class="py-16 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12"
		>
			<!-- Brand Column -->
			<div class="lg:col-span-2">
				<!-- Logo -->
				<div class="mb-6">
					<a
						href="/"
						class="inline-block text-3xl font-black text-white hover:text-rust-400 transition-colors duration-300 group"
					>
						<span class="relative">
							SHAWN PAPS<span
								class="text-rust-500 group-hover:text-rust-400"
								>.</span
							>
							<span
								class="absolute inset-0 text-rust-500/20 blur-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300"
							>
								SHAWN PAPS.
							</span>
						</span>
					</a>
				</div>

				<!-- Description -->
				<p class="text-steel-300 text-lg mb-8 max-w-md leading-relaxed">
					Bold, immersive online experiences for brands with <span
						class="text-white font-semibold">grit</span
					>. Web design, photography, and videography that solves
					problems.
				</p>

				<!-- CTA Button -->
				<a
					href="/contact"
					class="inline-flex items-center gap-3 bg-gradient-to-r from-rust-500 to-rust-400 hover:from-rust-400 hover:to-rust-300 text-white font-bold text-base px-8 py-3.5 rounded-full transition-all duration-500 hover:scale-105 shadow-lg hover:shadow-xl group"
				>
					<span>Start Your Project</span>
					<svg
						class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2.5"
							d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
					</svg>
				</a>
			</div>

			<!-- Link Columns -->
			{
				footerLinks.map((column) => (
					<div>
						<h4 class="text-white font-bold text-lg mb-5 relative inline-block">
							{column.title}
							<span class="absolute -bottom-1 left-0 w-8 h-0.5 bg-gradient-to-r from-rust-500 to-transparent" />
						</h4>
						<ul class="space-y-3">
							{column.links.map((link) => (
								<li>
									<a
										href={link.href}
										class="group inline-flex items-center gap-2 text-steel-300 hover:text-white transition-all duration-300"
									>
										<span class="w-0 h-0.5 bg-rust-500 group-hover:w-3 transition-all duration-300 rounded-full" />
										<span>{link.label}</span>
									</a>
								</li>
							))}
						</ul>
					</div>
				))
			}
		</div>

		<!-- Bottom Bar -->
		<div
			class="py-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6"
		>
			<!-- Copyright -->
			<div
				class="flex flex-col md:flex-row items-center gap-4 text-steel-400"
			>
				<p class="text-sm">
					© {currentYear} Shawn Paps Media. All rights reserved.
				</p>
				<div class="hidden md:block w-px h-4 bg-white/10"></div>
				<div class="flex items-center gap-4 text-sm">
					<a
						href="/privacy"
						class="hover:text-white transition-colors duration-300"
					>
						Privacy Policy
					</a>
					<span class="w-1 h-1 rounded-full bg-steel-600"></span>
					<a
						href="/terms"
						class="hover:text-white transition-colors duration-300"
					>
						Terms of Service
					</a>
				</div>
			</div>

			<!-- Social Links -->
			<div class="flex items-center gap-4">
				{
					socialLinks.map((social) => (
						<a
							href={social.href}
							class="group relative w-10 h-10 flex items-center justify-center rounded-full border border-white/10 text-steel-300 hover:text-white hover:border-rust-500/50 hover:bg-rust-500/10 transition-all duration-300"
							aria-label={social.name}
						>
							<svg
								class="w-5 h-5"
								fill="currentColor"
								viewBox="0 0 24 24"
								aria-hidden="true"
							>
								<path
									d={social.path}
									fill-rule={social.fillRule}
									clip-rule={social.clipRule}
								/>
							</svg>
							<span class="absolute inset-0 rounded-full bg-rust-500/20 blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-300 -z-10" />
						</a>
					))
				}
			</div>
		</div>

		<!-- Additional Info Bar -->
		<div class="pb-8 pt-4 text-center">
			<p class="text-steel-500 text-xs">
				Built with <span class="text-rust-500">♥</span> using Astro, React,
				and Tailwind CSS
			</p>
		</div>
	</div>

	<!-- Decorative Corner Elements -->
	<div
		class="absolute top-8 left-8 w-20 h-20 border-l-2 border-t-2 border-rust-500/10 rounded-tl-3xl pointer-events-none hidden lg:block"
	>
	</div>
	<div
		class="absolute bottom-8 right-8 w-20 h-20 border-r-2 border-b-2 border-rust-500/10 rounded-br-3xl pointer-events-none hidden lg:block"
	>
	</div>
</footer>
