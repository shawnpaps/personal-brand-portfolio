---
const services = [
	{
		title: "Photography",
		description:
			"Dark, grungy, moody photography that captures raw authenticity. Not polished corporate shots - real moments with real impact.",
		link: "/photography",
		icon: "ðŸ“¸",
		gradient: "from-rust-500/10 to-rust-600/5",
		features: ["Brand Photography", "Event Coverage", "Product Shots"],
	},
	{
		title: "Videography",
		description:
			"Cinematic brand stories and event coverage. From 30-second promos to full documentary-style pieces that make people feel something.",
		link: "/videography",
		icon: "ðŸŽ¥",
		gradient: "from-rust-400/10 to-rust-500/5",
		features: ["Brand Films", "Event Videos", "Social Content"],
	},
	{
		title: "Web Design",
		description:
			"Bold, fast, conversion-focused websites. Built with modern tech, optimized for results. Your site should work as hard as you do.",
		link: "/web-design",
		icon: "ðŸ’»",
		gradient: "from-rust-600/10 to-rust-700/5",
		features: ["Custom Design", "Fast Performance", "SEO Optimized"],
	},
];
---

<section
	class="py-16 md:py-24 lg:py-32 px-4 md:px-8 lg:px-12 bg-black-soft relative overflow-hidden"
>
	<!-- Advanced Background System -->
	<div
		class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[600px] bg-rust-500/10 rounded-full blur-[150px] pointer-events-none animate-glow-pulse"
	>
	</div>
	<div
		class="absolute bottom-0 right-0 w-[600px] h-[600px] bg-rust-600/5 rounded-full blur-[120px] pointer-events-none"
	>
	</div>

	<div class="max-w-7xl mx-auto relative z-10">
		<!-- Section Header -->
		<div class="text-center mb-20 max-w-3xl mx-auto">
			<!-- Overline -->
			<div class="mb-6 animate-fade-in">
				<span
					class="inline-flex items-center gap-2 text-rust-400 font-bold text-sm tracking-[0.2em] uppercase"
				>
					<span
						class="w-8 h-[2px] bg-gradient-to-r from-transparent to-rust-500"
					></span>
					Services
					<span
						class="w-8 h-[2px] bg-gradient-to-l from-transparent to-rust-500"
					></span>
				</span>
			</div>

			<h2
				class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-6 animate-fade-in-up"
				style="animation-delay: 0.1s;"
			>
				What We Do
			</h2>
			<p
				class="text-xl md:text-2xl text-steel-300 leading-relaxed animate-fade-in-up"
				style="animation-delay: 0.2s;"
			>
				We create immersive online experiences for brands with <span
					class="text-white font-semibold">grit</span
				>
			</p>
		</div>

		<!-- Services Grid -->
		<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-10">
			{
				services.map((service, index) => (
					<a
						href={service.link}
						class="group relative bg-black-card/60 backdrop-blur-xl border border-white/10 p-10 lg:p-12 rounded-3xl overflow-hidden transition-all duration-700 hover:scale-[1.02] hover:bg-black-card/80 hover:border-rust-500/30 hover:shadow-xl animate-fade-in-up"
						style={`animation-delay: ${(index + 3) * 0.1}s;`}
					>
						{/* Gradient Background - Animated on Hover */}
						<div
							class={`absolute inset-0 bg-gradient-to-br ${service.gradient} opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none`}
						/>

						{/* Accent Border - Animated */}
						<div class="absolute inset-0 rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700 pointer-events-none">
							<div class="absolute inset-0 rounded-3xl border border-rust-500/30" />
						</div>

						{/* Content Container */}
						<div class="relative z-10">
							{/* Icon with Enhanced Animation */}
							<div class="mb-8">
								<div class="relative inline-block">
									<div class="text-7xl lg:text-8xl transform transition-all duration-700 group-hover:scale-110 group-hover:rotate-6 will-change-transform">
										{service.icon}
									</div>
									{/* Icon Glow Effect */}
									<div class="absolute inset-0 bg-rust-500/20 blur-2xl rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-700" />
								</div>
							</div>

							{/* Title */}
							<h3 class="text-3xl lg:text-4xl font-black text-white mb-5 transition-all duration-500 group-hover:text-gradient-static">
								{service.title}
							</h3>

							{/* Description */}
							<p class="text-steel-300 text-base lg:text-lg mb-8 leading-relaxed">
								{service.description}
							</p>

							{/* Features List */}
							<ul class="space-y-3 mb-8">
								{service.features.map((feature) => (
									<li class="flex items-center gap-3 text-steel-400 text-sm">
										<svg
											class="w-5 h-5 text-rust-500 flex-shrink-0"
											fill="currentColor"
											viewBox="0 0 20 20"
										>
											<path
												fill-rule="evenodd"
												d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
												clip-rule="evenodd"
											/>
										</svg>
										<span class="font-medium">
											{feature}
										</span>
									</li>
								))}
							</ul>

							{/* CTA Link */}
							<div class="flex items-center gap-3 text-rust-400 font-bold group-hover:text-rust-300 transition-colors duration-500">
								<span class="text-base lg:text-lg">
									View Work
								</span>
								<svg
									class="w-5 h-5 transition-transform duration-500 group-hover:translate-x-2"
									fill="none"
									stroke="currentColor"
									viewBox="0 0 24 24"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										stroke-width="2.5"
										d="M17 8l4 4m0 0l-4 4m4-4H3"
									/>
								</svg>
							</div>
						</div>

						{/* Bottom Accent Bar - Animated */}
						<div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-rust-500 via-rust-400 to-rust-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-700 origin-left" />

						{/* Corner Decoration */}
						<div class="absolute top-6 right-6 w-12 h-12 border-t-2 border-r-2 border-rust-500/20 rounded-tr-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-700" />
					</a>
				))
			}
		</div>

		{/* Bottom CTA */}
		<div
			class="text-center mt-16 animate-fade-in-up"
			style="animation-delay: 0.6s;"
		>
			<p class="text-steel-300 text-lg mb-6">Not sure what you need?</p>
			<a
				href="/contact"
				class="inline-flex items-center gap-3 text-rust-400 hover:text-rust-300 font-bold text-lg transition-colors group"
			>
				<span>Let's talk about your project</span>
				<svg
					class="w-5 h-5 transition-transform group-hover:translate-x-1"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						stroke-width="2"
						d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
				</svg>
			</a>
		</div>
	</div>
</section>
