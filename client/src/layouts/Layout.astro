---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Shawn Paps Media - Bold, immersive online experiences for brands with grit. Web design, photography, and videography for barbers, coffee shops, construction trades, and creators.",
  image = "/og-image.jpg"
} = Astro.props;

const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    {typeof canonicalURL === 'string' ? (
      <link rel="canonical" href={canonicalURL} />
    ) : (
      <link rel="canonical" href={canonicalURL.href} />
    )}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    {typeof canonicalURL === 'string' ? (
      <meta property="og:url" content={canonicalURL} />
    ) : (
      <meta property="og:url" content={canonicalURL.href} />
    )}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    {typeof canonicalURL === 'string' ? (
      <meta property="twitter:url" content={canonicalURL} />
    ) : (
      <meta property="twitter:url" content={canonicalURL.href} />
    )}
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800;900&display=swap" rel="stylesheet" />
  </head>
  <body>
    <slot />
  </body>
</html>
